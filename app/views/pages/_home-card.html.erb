 <div class="main-container">
  <div class="container">
    <h1 class="text-shadow">Book an appointment.
    <br>Feel Better</h1>

    <form class="form" action="<%= users_path %>">
      <div class="form-group col-sm-12 col-md-9 col-form-label my-1">
        <label for="specializationInput"></label>
        <% User.specializations.each do |specialization| %>
          <!-- User.specialization() -->
        <% end %>
        <select type="text" class="form-control" id="specializationInput" placeholder="Look for a specialization" name="specialization">
          <option>Look for a specialization</option>
          <option>Dentist</option>
          <option>Gynecologist</option>
          <option>Generalist</option>
          <option>Ophtalmologist</option>
          <option>Oncologist</option>
          <option>Traumatologist</option>
          <option>Pediatrician</option>
          <option>Psychiatrist</option>
          <option>Psychologist</option>
          <option>Cardiologist</option>
          <option>Dermatologist</option>
        </select>
      </div>
      <div class="form-group col-sm-12 col-md-9 col-form-label">
        <label for="locationInput"></label>
        <input type="text" class="form-control" id="locationInput" placeholder="Location" name="address">
      </div>
      <div class="form-group col-sm-12 col-md-4 col-form-label">
        <input type="submit" value="Find doctors!" class="btn btn-primary my-2 w-100" id="findDoctors">
      </div>
    </form>
  </div>
</div>
