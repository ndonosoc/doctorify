
<div class="container">
  <div class="card">
    <article class="card-body">
      <h4 class="card-title text-center mb-4 mt-1">Log in</h4>
      <hr>
      <p class="text-success text-center">Sign in to book an appointment.</p>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-user"></i> </span>
            <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email" }, class: "form-control" %>
          </div>
        </div> <!-- input-group.// -->
      </div> <!-- form-group// -->
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password" }, class: "form-control", placeholder: "******" %>
          </div>
        </div> <!-- input-group.// -->
      </div> <!-- form-group// -->
      <div class="form-group">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
        <% end %>
      </div> <!-- form-group// -->
      <p class="text-center"><a href="#" class="btn">Forgot password?</a></p>

    </article>
  </div>
</div>

<%= render "devise/shared/links" %>
