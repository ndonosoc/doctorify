<div class="modal fade" id="newAppointment" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Choose your date</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-groups mb-3" data-available="<%= @doctor.unavailable_dates.to_json %>">
          <%= simple_form_for [@doctor, @appointment] do |f| %>
          <%= f.input :appointment_date, as: :string, input_html: { class: "datepicker form-control" } %>
          <%= f.button :submit, class: "btn btn-success mt-3", style: "color: white;" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
