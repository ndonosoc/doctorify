<div class="container-fluid">
  <div class="row" >
    <div class="col-8">
      <div class="cards">
        <div class="card-doctor my-2">
          <% if user_signed_in? && current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key %>
          <% else %>
            <img src="https://cdn3.f-cdn.com/contestentries/1376995/30494909/5b566bc71d308_thumb900.jpg" />
          <% end %>
          <div class="card-wrapper">
            <div class="card-doctor-infos">
              <h2>Doctor's name</h2>
              <p>Practice description with <strong>relevant info</strong> only.</p>
            </div>
            <div class="actions d-flex justify-content-end">
              <a class="btn btn-ghost btn-sm my-2 float-right"> <i class="far fa-calendar-alt"></i> Make an appointment</a>
              <a class="btn btn-ghost btn-sm my-2 float-right"> <i class="far fa-envelope"></i> Message</a>
            </div>
          </div>
        </div>
        <div class="card-doctor my-2">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
          <div class="card-wrapper">
            <div class="card-doctor-infos">
              <h2>Doctor's name</h2>
              <p>Practice description with <strong>relevant info</strong> only.</p>
            </div>
            <div class="actions d-flex justify-content-end">
              <a class="btn btn-ghost btn-sm my-2 float-right"> <i class="far fa-calendar-alt"></i> Make an appointment</a>
              <a class="btn btn-ghost btn-sm my-2 float-right"> <i class="far fa-envelope"></i> Message</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
          <div id="map" style="width: 100%; height: 600px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%=ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
</div>



<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
