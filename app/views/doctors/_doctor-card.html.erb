<% @doctors.each do |doctor| %>

<div class="doctor-card bg-white p-3 border-1 my-3 d-flex">
  <div class="doctor-information flex-grow-1 mr-3">
    <div class="d-flex justify-content-between">
      <p class="font-weight-light m-0"><%= doctor.specialization %></p>
      <div class="">
        <i class="fas fa-star"></i>
        <span class="pl-1">3.6</span>
      </div>
    </div>
    <h2 class="mt-2 mb-2"><%= link_to user_path(doctor.id) do %>Dr. <%= doctor.last_name.capitalize %> <% end %></h2>
    <div class="d-flex justify-content-between align-items-end">
      <div class="location">
        <i class="fas fa-map-marker"></i>
        <span><%= doctor.address %></span>
      </div>
    </div>
  </div>
  <% if doctor.photo.attached? %>
    <img src="<%= cl_image_path doctor.photo.key %>">
  <% else %>
    <img src="https://cdn6.f-cdn.com/contestentries/1376995/30494909/5b566bc71d308_thumbCard.jpg" alt="" class="w-25 d-none d-lg-block">
  <% end %>
</div>
<% end %>
